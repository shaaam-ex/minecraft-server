model Server {
    id            Int      @id @default(autoincrement())
    name          String
    ipAddress     String
    port          Int
    status        String   @default("offline")
    configuration Json
    version       String
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt
    createdBy     Int
    // Relations
    createdById   User     @relation("UserServers", fields: [createdBy], references: [id], onDelete: Cascade)

    // Ipaddress and Port combination should be unique
    @@unique([ipAddress, port])
}
